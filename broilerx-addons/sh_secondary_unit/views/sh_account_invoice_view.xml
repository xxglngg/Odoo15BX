<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_customer_account_invoice_view" model="ir.ui.view">
        <field name="name">sh.customer.account.invoice.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet//notebook//page[1]//field[@name='invoice_line_ids']//tree//field[@name='product_uom_id']" position="after">
                <field name="sh_is_secondary_unit" invisible="1" />
                <field name="category_id" invisible="1" />
                <field name="sh_sec_qty" force_save="1" attrs="{'readonly': [('sh_is_secondary_unit', '=', False)], 'required': [('sh_is_secondary_unit', '=', True)] }" groups="sh_secondary_unit.group_secondary_unit_invoice" />
                <field
                    name="sh_sec_uom"
                    force_save="1"
                    attrs="{'readonly': [('sh_is_secondary_unit', '=', False)], 'required': [('sh_is_secondary_unit', '=', True)] }"
                    domain="[('category_id','=',category_id)]"
                    groups="sh_secondary_unit.group_secondary_unit_invoice"
                />
            </xpath>
        </field>
    </record>
</odoo>
