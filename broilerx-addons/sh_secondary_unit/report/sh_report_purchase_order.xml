<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="sh_purchase_quotation_report_document" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//table/thead/tr[1]/th[3]" position="after">
            <th class="text-right" groups="sh_secondary_unit.group_secondary_unit_purchase">Secondary Quantity</th>
        </xpath>
        <xpath expr="//table//tbody//tr[1]//td[3]" position="after">
            <td class="text-right" groups="sh_secondary_unit.group_secondary_unit_purchase">
                <span t-field="order_line.sh_sec_qty" />
                <span t-field="order_line.sh_sec_uom.name" />
            </td>
        </xpath>
    </template>
    <template id="sh_purchase_order_report_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table/thead/tr[1]/th[4]" position="after">
            <th class="text-right" groups="sh_secondary_unit.group_secondary_unit_purchase">Secondary Quantity</th>
        </xpath>
        <xpath expr="//table//tbody//tr[1]//td[4]" position="after">
            <td class="text-right" groups="sh_secondary_unit.group_secondary_unit_purchase">
                <span t-field="line.sh_sec_qty" />
                <span t-field="line.sh_sec_uom.name" />
            </td>
        </xpath>
    </template>
</odoo>
